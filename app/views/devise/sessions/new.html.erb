<div class="m-grid__item m-grid__item--fluid m-grid m-grid--hor m-login m-login--signin m-login--2 m-login-2--skin-2" id="m_login">
  <div class="m-grid__item m-grid__item--fluid	m-login__wrapper">
    <div class="m-login__container">
      <div class="m-login__logo">
        <span>
          <%= image_tag 'logo.ico' %>
        </span>
      </div>
      <div class="m-login__signin">
        <div class="m-login__head">
          <h3 class="m-login__title">
            <%= t('views.login.title') %>
          </h3>
        </div>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'm-login__form m-form'}) do |f| %>
          <div class="form-group m-form__group">
            <%= f.text_field :email, autofocus: true, autocomplete: "email", class: 'form-control m-input', placeholder: t('views.login.email_plhd') %>
          </div>
          <div class="form-group m-form__group">
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control m-input m-login__form-input--last', placeholder: t('views.login.password_plhd') %>
          </div>
          <div class="error pl-2"><%= (devise_error_messages!).html_safe %></div>
          <% if devise_mapping.rememberable? -%>
            <div class="row m-login__form-sub">
              <div class="col m--align-left m-login__form-left">
                <label class="m-checkbox  m-checkbox--focus">
                  <%= f.check_box :remember_me %>
                  <%= t('views.login.remember_me') %>
                  <span></span>
                </label>
              </div>
              <div class="col">
                <%= new_password_path(resource_name)%>
                <%= link_to "Forgot your password?", new_password_path(resource_name) %>
              </div>
            </div>
          <% end -%>
          <div class="m-login__form-action">
            <%= f.submit t('views.login.sign_in'), class: 'btn btn-primary m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn m-login__btn--primary' %>
            <%= link_to t('views.login.google_sign_in'), user_google_oauth2_omniauth_authorize_path, class: 'btn btn-success m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn m-login__btn--primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
