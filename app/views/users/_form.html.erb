
<%= simple_form_for(@user, wrapper: :horizontal_form) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :full_name %>
    <%= f.input :email, :disabled => !@user.new_record? %>

    <%= f.association :role %>

    <% if @user.new_record? %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
    <% end %>

    <div class="form-group row integer optional user_role_id">
      <%= f.label :disabled, class: 'col-sm-3 col-form-label optional' %>
      <div class="col-sm-9">
        <div class="m-checkbox-inline">
          <%= f.collection_radio_buttons :disabled, [[true, 'Yes'], [false, 'No']], :first, :last %>
        </div>
      </div>
    </div>

  </div>

  <div class="form-actions text-right">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
