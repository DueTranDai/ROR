<script type="text/javascript">
    I18n.defaultLocale = "<%= I18n.default_locale %>";
    I18n.locale = "<%= I18n.locale %>";

    <% if flash[:success] || flash[:notice] || flash[:error] %>
    $(document).ready(function () {
        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": true,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };

        <% if flash[:success] %>
        toastr.success("<%= flash[:success] %>");
        <% elsif flash[:error] %>
        toastr.error("<%= flash[:error] %>");
        <% else %>
        toastr.info("<%= flash[:notice] %>");
        <% end %>
    });
    <% end %>
</script>